{
  "compilerOptions": {
    "baseUrl": ".",
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "babel.test.json",
    "metro.config.js",
    "jest.config.js"
  ]
}
